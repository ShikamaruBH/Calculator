<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#e8f5ff"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textSize="40dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:gravity="end"
        android:textSize="50dp"/>
    <TextView
        android:id="@+id/tv_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="30dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="4"
        android:columnCount="5"
        android:useDefaultMargins="true"
        >

        <Button
            android:id="@+id/bt_7"
            android:backgroundTint="#eeeeee"
            android:textColor="#004d9c"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:height="0dp"
            android:onClick="ButtonHandler"
            android:text="7"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_8"
            android:backgroundTint="#eeeeee"
            android:textColor="#004d9c"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:height="0dp"
            android:onClick="ButtonHandler"
            android:text="8"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_9"
            android:backgroundTint="#eeeeee"
            android:textColor="#004d9c"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:height="0dp"
            android:onClick="ButtonHandler"
            android:text="9"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_sign"
            android:backgroundTint="#afaeae"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:height="0dp"
            android:onClick="ButtonHandler"
            android:text="+/-"
            android:textSize="15dp" />

        <Button
            android:id="@+id/bt_del"
            android:backgroundTint="#afaeae"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:height="0dp"
            android:onClick="ButtonHandler"
            android:text="DEL"
            android:textSize="15dp" />

        <Button
            android:id="@+id/bt_4"
            android:backgroundTint="#eeeeee"
            android:textColor="#004d9c"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:height="0dp"
            android:onClick="ButtonHandler"
            android:text="4"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_5"
            android:backgroundTint="#eeeeee"
            android:textColor="#004d9c"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:height="0dp"
            android:onClick="ButtonHandler"
            android:text="5"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_6"
            android:backgroundTint="#eeeeee"
            android:textColor="#004d9c"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:height="0dp"
            android:onClick="ButtonHandler"
            android:text="6"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_mul"
            android:backgroundTint="#7f7f7f"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:height="0dp"
            android:onClick="ButtonHandler"
            android:text="*"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_div"
            android:backgroundTint="#7f7f7f"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:height="0dp"
            android:onClick="ButtonHandler"
            android:text="/"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_1"
            android:backgroundTint="#eeeeee"
            android:textColor="#004d9c"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:height="0dp"
            android:onClick="ButtonHandler"
            android:text="1"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_2"
            android:backgroundTint="#eeeeee"
            android:textColor="#004d9c"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:height="0dp"
            android:onClick="ButtonHandler"
            android:text="2"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_3"
            android:backgroundTint="#eeeeee"
            android:textColor="#004d9c"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:height="0dp"
            android:onClick="ButtonHandler"
            android:text="3"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_sub"
            android:backgroundTint="#7f7f7f"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:height="0dp"
            android:onClick="ButtonHandler"
            android:text="-"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_equal"
            android:backgroundTint="#005db2"
            android:layout_width="0dp"
            android:layout_rowSpan="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_vertical"
            android:height="0dp"
            android:onClick="ButtonHandler"
            android:text="="
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_clear"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:height="0dp"
            android:backgroundTint="#e40101"
            android:onClick="ButtonHandler"
            android:text="C"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_0"
            android:backgroundTint="#eeeeee"
            android:textColor="#004d9c"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:height="0dp"
            android:onClick="ButtonHandler"
            android:text="0"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_dot"
            android:backgroundTint="#eeeeee"
            android:textColor="#004d9c"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:height="0dp"
            android:onClick="ButtonHandler"
            android:text="."
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_add"
            android:backgroundTint="#7f7f7f"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:height="0dp"
            android:onClick="ButtonHandler"
            android:text="+"
            android:textSize="25dp" />

    </GridLayout>

</LinearLayout>